# Mentara Production Environment (.env)
# Copy to `.env` on the server and fill real values.

# Django
DEBUG=False
SECRET_KEY=change-this-to-a-long-random-string
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Strongly recommended for production
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Database (Docker Postgres on same machine)
DB_NAME=mentara_db
DB_USER=postgres
DB_PASSWORD=change-this-secure-password
DB_HOST=db
DB_PORT=5432

# Optional: Redis (only if your code uses it)
# REDIS_URL=redis://redis:6379/0

# Frontend API base: keep same-origin in production
# This matches nginx routing: https://yourdomain.com/api/
VITE_BASE_API=/api

# Email (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# S3 (optional, future upgrade)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# Cloudinary (optional, recommended for Render demo/testing)
# Set USE_CLOUDINARY=True and provide the keys below.
# Note: When USE_CLOUDINARY=True, uploads will persist even on Render free (ephemeral disk).
USE_CLOUDINARY=False
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
